<IfModule mod_rewrite.c>
    RewriteEngine On

    # Blokir akses langsung ke .env, composer.json, dan file sensitif
    <FilesMatch "(^\.|composer\.(json|lock)|artisan|server\.php)">
        Order allow,deny
        Deny from all
    </FilesMatch>

    # Blokir akses folder tertentu
    RewriteRule ^vendor/ - [F,L]
    RewriteRule ^storage/ - [F,L]
    RewriteRule ^bootstrap/ - [F,L]
</IfModule>
